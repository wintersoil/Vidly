@model Vidly.ViewModels.RandomCustomersViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
@if (Model.customers.Count < 1)
{
    <p class="lead">We don't have any customers yet.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cust in Model.customers)
            {
            <tr class="table-dark">
                <td><a href="http://127.0.0.1:8080/Customers/Details/@cust.Id">@cust.Name</a></td>
            </tr>
            }
        </tbody>
    </table>
}