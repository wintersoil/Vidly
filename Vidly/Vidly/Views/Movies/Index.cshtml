@model Vidly.ViewModels.RandomMoviesViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model.movies)
        {
            <tr class="table-dark">
                <td>@movie.Name</td>
            </tr>
        }
    </tbody>
</table>
